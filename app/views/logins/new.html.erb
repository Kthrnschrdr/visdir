<center>
<h2>Log In</h2>

<%= form_tag create_login_path do %>
  <div class="field">
    <%= label_tag :email %><br />
    <%= text_field_tag :email, params[:email] %>
  </div>
  
  <div class="field">
    <%= label_tag :password %><br />
    <%= password_field_tag :password %>
  </div>
  
  <%= submit_tag "Log In" %>
<% end %>
</center>